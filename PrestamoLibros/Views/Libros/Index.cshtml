@model IEnumerable<PrestamoLibros.Models.Libro>

@{
    ViewBag.Title = "Lista";
    WebGrid OGrd = new WebGrid(Model, rowsPerPage: 10, canPage: true);

}

<h2>Lista de Libros</h2>

<p>
    @Html.ActionLink("Agregar Registro", "Create")
</p>
@OGrd.GetHtml(
    headerStyle: "webgrid-header",
    rowStyle: "webgrid-row",
    footerStyle: "webgrid-footer",
    tableStyle: "webgrid-table",
    fillEmptyRows: false,
    columns: OGrd.Columns(
        OGrd.Column(columnName: "CodigoDeLibro", header: "Código"),
        OGrd.Column(columnName: "TituloDeLibro", header: "Título"),
        OGrd.Column(columnName: "ISBN", header: "ISBN"),
        OGrd.Column(columnName: "Autor", header: "Autor"),
        OGrd.Column(columnName: "Materia.DescripcionDeMateria", header:"Materia"),
        OGrd.Column(header: "Acciones", format:@<Text>

        @Html.ActionLink(" ", "Edit", new { id = @item.Id }, new { @class = "glyphicon glyphicon-pencil" })|
        @Html.ActionLink(" ", "details", new { id = @item.Id }, new { @class = "glyphicon glyphicon-file" })|
        @Html.ActionLink(" ", "delete", new { id = @item.Id }, new { @class = "glyphicon glyphicon-trash" })
        </Text>)
        )
    )
