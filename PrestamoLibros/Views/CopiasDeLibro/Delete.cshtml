@model PrestamoLibros.Models.CopiaDeLibro

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar Copia</h2>

<h3>¿Esta seguro que desea eliminar esta copia?</h3>
<div>
    <h4>Copia De Libro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Libro.CodigoDeLibro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Libro.CodigoDeLibro)
        </dd>

        <dt>
