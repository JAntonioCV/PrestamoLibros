@model PrestamoLibros.Models.AlquilerDeLibro

@{
    ViewBag.Title = "Edición";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Devolucion de libro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CodigoAlquiler)
        @Html.HiddenFor(model => model.FechaRealDevolucion)
        @Html.HiddenFor(model=> model.ClienteId)
        @Html.HiddenFor(model => model.CopiaDeLibro.LibroId)
        @Html.HiddenFor(model => model.CopiaId)
         

        <div class="form-group">
            @Html.LabelFor(model => model.CodigoAlquiler, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoAlquiler, new { htmlAttributes = new { @class = "form-control calendario", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.CodigoAlquiler, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaAlquiler, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaAlquiler, new { htmlAttributes = new { @class = "form-control calendario" }  })
                @Html.ValidationMessageFor(model => model.FechaAlquiler, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaRealDevolucion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaRealDevolucion, new { htmlAttributes = new { @class = "form-control calendario", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.FechaRealDevolucion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClienteId, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClienteId", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CopiaDeLibro.LibroId, "Libro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LibroId", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CopiaDeLibro.LibroId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CopiaId, "Copia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CopiaId", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CopiaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { CodE = Model.Cliente.CodigoDeCliente })
</div>

@section Scripts {
@Scripts.Render("~/bundles/prestamo")
@Scripts.Render("~/bundles/jqueryval");
}



